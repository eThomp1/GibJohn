<h3>ScienceQuiz</h3>
@page "/ScienceQuiz"
<link rel="stylesheet" href="css/style.css" />

<div>
    <div class="quiz-container">
        <h2>Advanced Science Quiz</h2>
        <form id="quizForm">
            <div class="question">
                <p>1. What is Element number 1?</p>
                <input type="radio" name="q1" value="Hydrogen"> Hydrogen
                <input type="radio" name="q1" value="Helium"> Helium
                <input type="radio" name="q1" value="Oxygen"> Oxygen
            </div>
            <div class="question">
                <p>2. What charge does a proton have?</p>
                <input type="radio" name="q2" value="1"> 1
                <input type="radio" name="q2" value="0"> 0
                <input type="radio" name="q2" value="-1"> -1
            </div>
            <div class="question">
                <p>3. What charge does a neutron have?</p>
                <input type="radio" name="q3" value="1"> 1
                <input type="radio" name="q3" value="0"> 0
                <input type="radio" name="q3" value="-1"> -1
            </div>
            <div class="question">
                <p>4. What charge does an electron have?</p>
                <input type="radio" name="q4" value="1"> 1
                <input type="radio" name="q4" value="0"> 0
                <input type="radio" name="q4" value="-1"> -1
            </div>
            <div class="question">
                <p>5. What is the sun?</p>
                <input type="radio" name="q5" value="A planet"> A planet
                <input type="radio" name="q5" value="A moon"> A moon
                <input type="radio" name="q5" value="A star"> A star
            </div>
            <div class="question">
                <p>6. What is the chemical symbol for gold?</p>
                <input type="radio" name="q6" value="Au"> Au
                <input type="radio" name="q6" value="Ag"> Ag
                <input type="radio" name="q6" value="Pb"> Pb
            </div>
            <div class="question">
                <p>7. Which planet is known as the Red Planet?</p>
                <input type="radio" name="q7" value="Venus"> Venus
                <input type="radio" name="q7" value="Mars"> Mars
                <input type="radio" name="q7" value="Jupiter"> Jupiter
            </div>
            <div class="question">
                <p>8. What is the powerhouse of the cell?</p>
                <input type="radio" name="q8" value="Nucleus"> Nucleus
                <input type="radio" name="q8" value="Mitochondria"> Mitochondria
                <input type="radio" name="q8" value="Ribosome"> Ribosome
            </div>
            <div class="question">
                <p>9. What is the most abundant gas in Earth's atmosphere?</p>
                <input type="radio" name="q9" value="Oxygen"> Oxygen
                <input type="radio" name="q9" value="Nitrogen"> Nitrogen
                <input type="radio" name="q9" value="Carbon Dioxide"> Carbon Dioxide
            </div>
            <div class="question">
                <p>10. What force keeps planets in orbit around the Sun?</p>
                <input type="radio" name="q10" value="Magnetism"> Magnetism
                <input type="radio" name="q10" value="Gravity"> Gravity
                <input type="radio" name="q10" value="Friction"> Friction
            </div>
            <button type="button" onclick="calculateScore()">Submit</button>
        </form>
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateScore() {
            let score = 0;
            let correctAnswers = { q1: "Hydrogen", q2: "1", q3: "0", q4: "-1", q5: "A star", q6: "Au", q7: "Mars", q8: "Mitochondria", q9: "Nitrogen", q10: "Gravity" };
            let wrongAnswers = [];

            for (let question in correctAnswers) {
                let selected = document.querySelector(`input[name="${question}"]:checked`);
                if (selected) {
                    if (selected.value === correctAnswers[question]) {
                        score++;
                    } else {
                        wrongAnswers.push(`${question}: Your answer was ${selected.value}, correct answer is ${correctAnswers[question]}`);
                    }
                } else {
                    wrongAnswers.push(`${question}: No answer selected, correct answer is ${correctAnswers[question]}`);
                }
            }

            let resultDiv = document.getElementById("result");
            resultDiv.innerHTML = `<p>Your score: ${score}/10</p>`;
            if (wrongAnswers.length > 0) {
                resultDiv.innerHTML += "<p>Incorrect Answers:</p><ul>" + wrongAnswers.map(q => `<li>${q}</li>`).join('') + "</ul>";
            }
        }
    </script>
</div>

