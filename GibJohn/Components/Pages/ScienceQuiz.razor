<h3>ScienceQuiz</h3>
@page "/ScienceQuiz"
<link rel="stylesheet" href="css/style.css" />

<div>
    <div class="quiz-container">
        <h2>Advanced Science Quiz</h2>
        <form id="quizForm">
            <div class="question">
                <p>1. What is Element number 1?</p>
                <input type="radio" name="q1" value="H"> H
                <input type="radio" name="q1" value="He"> He
                <input type="radio" name="q1" value="O"> Oxygen
            </div>
            <div class="question">
                <p>2. What charge does a proton have?</p>
                <input type="radio" name="q2" value="1"> 1
                <input type="radio" name="q2" value="0"> 0
                <input type="radio" name="q2" value="-1"> -1
            </div>
            <div class="question">
                <p>3. What charge does a neutron have?</p>
                <input type="radio" name="q3" value="1"> 1
                <input type="radio" name="q3" value="0"> 0
                <input type="radio" name="q3" value="-1"> -1
            </div>
            <div class="question">
                <p>4. What charge does an electron have?</p>
                <input type="radio" name="q4" value="1"> 1
                <input type="radio" name="q4" value="0"> 0
                <input type="radio" name="q4" value="-1"> -1
            </div>
            <div class="question">
                <p>5. What is the sun?</p>
                <input type="radio" name="q5" value="p"> A planet
                <input type="radio" name="q5" value="m"> A moon
                <input type="radio" name="q5" value="s"> A star
            </div>
            <div class="question">
                <p>6. What is 12 × 12?</p>
                <input type="radio" name="q6" value="124"> 124
                <input type="radio" name="q6" value="144"> 144
                <input type="radio" name="q6" value="164"> 164
            </div>
            <div class="question">
                <p>7. What is the square root of 81?</p>
                <input type="radio" name="q7" value="8"> 8
                <input type="radio" name="q7" value="9"> 9
                <input type="radio" name="q7" value="10"> 10
            </div>
            <div class="question">
                <p>8. What is 25 × 4?</p>
                <input type="radio" name="q8" value="100"> 100
                <input type="radio" name="q8" value="110"> 110
                <input type="radio" name="q8" value="125"> 125
            </div>
            <div class="question">
                <p>9. What is 2³?</p>
                <input type="radio" name="q9" value="6"> 6
                <input type="radio" name="q9" value="8"> 8
                <input type="radio" name="q9" value="9"> 9
            </div>
            <div class="question">
                <p>10. What is 100 ÷ 4?</p>
                <input type="radio" name="q10" value="20"> 20
                <input type="radio" name="q10" value="25"> 25
                <input type="radio" name="q10" value="30"> 30
            </div>
            <button type="button" onclick="calculateScore()">Submit</button>
        </form>
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateScore() {
            let score = 0;
            let correctAnswers = { q1: "8", q2: "6", q3: "12", q4: "5", q5: "15", q6: "144", q7: "9", q8: "100", q9: "8", q10: "25" };
            let wrongAnswers = [];

            for (let question in correctAnswers) {
                let selected = document.querySelector(`input[name="${question}"]:checked`);
                if (selected) {
                    if (selected.value === correctAnswers[question]) {
                        score++;
                    } else {
                        wrongAnswers.push(`${question}: Your answer was ${selected.value}, correct answer is ${correctAnswers[question]}`);
                    }
                } else {
                    wrongAnswers.push(`${question}: No answer selected, correct answer is ${correctAnswers[question]}`);
                }
            }

            let resultDiv = document.getElementById("result");
            resultDiv.innerHTML = `<p>Your score: ${score}/10</p>`;
            if (wrongAnswers.length > 0) {
                resultDiv.innerHTML += "<p>Incorrect Answers:</p><ul>" + wrongAnswers.map(q => `<li>${q}</li>`).join('') + "</ul>";
            }
        }
    </script>
</div>

