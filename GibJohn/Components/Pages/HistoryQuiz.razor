<h3>HistoryQuiz</h3>
@page "/HistoryQuiz"
<link rel="stylesheet" href="css/style.css" />

<div>
    <div class="quiz-container">
        <h2>Advanced History Quiz</h2>
        <form id="quizForm">
            <div class="question">
                <p>1. What is 5 + 3?</p>
                <input type="radio" name="q1" value="7"> 7
                <input type="radio" name="q1" value="8"> 8
                <input type="radio" name="q1" value="9"> 9
            </div>
            <div class="question">
                <p>2. What is 10 - 4?</p>
                <input type="radio" name="q2" value="5"> 5
                <input type="radio" name="q2" value="6"> 6
                <input type="radio" name="q2" value="7"> 7
            </div>
            <div class="question">
                <p>3. What is 6 × 2?</p>
                <input type="radio" name="q3" value="10"> 10
                <input type="radio" name="q3" value="12"> 12
                <input type="radio" name="q3" value="14"> 14
            </div>
            <div class="question">
                <p>4. What is 15 ÷ 3?</p>
                <input type="radio" name="q4" value="4"> 4
                <input type="radio" name="q4" value="5"> 5
                <input type="radio" name="q4" value="6"> 6
            </div>
            <div class="question">
                <p>5. What is 9 + 6?</p>
                <input type="radio" name="q5" value="14"> 14
                <input type="radio" name="q5" value="15"> 15
                <input type="radio" name="q5" value="16"> 16
            </div>
            <div class="question">
                <p>6. What is 12 × 12?</p>
                <input type="radio" name="q6" value="124"> 124
                <input type="radio" name="q6" value="144"> 144
                <input type="radio" name="q6" value="164"> 164
            </div>
            <div class="question">
                <p>7. What is the square root of 81?</p>
                <input type="radio" name="q7" value="8"> 8
                <input type="radio" name="q7" value="9"> 9
                <input type="radio" name="q7" value="10"> 10
            </div>
            <div class="question">
                <p>8. What is 25 × 4?</p>
                <input type="radio" name="q8" value="100"> 100
                <input type="radio" name="q8" value="110"> 110
                <input type="radio" name="q8" value="125"> 125
            </div>
            <div class="question">
                <p>9. What is 2³?</p>
                <input type="radio" name="q9" value="6"> 6
                <input type="radio" name="q9" value="8"> 8
                <input type="radio" name="q9" value="9"> 9
            </div>
            <div class="question">
                <p>10. What is 100 ÷ 4?</p>
                <input type="radio" name="q10" value="20"> 20
                <input type="radio" name="q10" value="25"> 25
                <input type="radio" name="q10" value="30"> 30
            </div>
            <button type="button" onclick="calculateScore()">Submit</button>
        </form>
        <div class="result" id="result"></div>
    </div>


</div>

